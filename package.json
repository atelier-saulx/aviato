{
  "name": "@aviato/ui-workspaces",
  "author": "Based",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atelier-saulx/aviato-ui/issues"
  },
  "homepage": "https://github.com/atelier-saulx/aviato-ui#readme",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atelier-saulx/aviato-ui.git"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "aviato",
    "saulx"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn watch",
    "build-start": "yarn build && yarn watch",
    "watch": "yarn workspace @aviato/build action watch 'utils,ui,docs'",
    "lint": "yarn workspace @aviato/build action lint 'utils,ui,docs'",
    "prebuild": "yarn lint",
    "build": "yarn workspace @aviato/build action build 'utils,ui,docs'",
    "postinstall": "[ -d '.husky' ] && (husky install && shx rm -rf .git/hooks && shx ln -s ../.husky .git/hooks) || true"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2"
  },
  "lint-staged": {
    "*": [
      "yarn lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "dependencies": {
    "shx": "^0.3.3"
  }
}
