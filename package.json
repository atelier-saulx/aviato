{
  "name": "@aviato/ui-workspaces",
  "author": "Based",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atelier-saulx/aviato-ui/issues"
  },
  "homepage": "https://github.com/atelier-saulx/aviato-ui#readme",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atelier-saulx/aviato-ui.git"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "aviato",
    "saulx"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn watch",
    "build-start": "yarn build && yarn watch",
    "watch": "run-p watch:*",
    "watch:utils": "yarn workspace @aviato/utils watch",
    "watch:ui": "yarn workspace @aviato/ui watch",
    "watch:docs": "yarn workspace @aviato/docs dev",
    "lint": "run-p lint:*",
    "lint:utils": "yarn workspace @aviato/utils lint",
    "lint:ui": "yarn workspace @aviato/ui lint",
    "lint:docs": "yarn workspace @aviato/docs lint",
    "build": "run-s build:*",
    "build:utils": "yarn workspace @aviato/utils build",
    "build:ui": "yarn workspace @aviato/ui build",
    "build:docs": "yarn workspace @aviato/docs build",
    "postbuild": "yarn lint",
    "postinstall": "[ -d '.husky' ] && (husky install && shx rm -rf .git/hooks && shx ln -s ../.husky .git/hooks) || true"
  },
  "devDependencies": {
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5"
  },
  "lint-staged": {
    "*": [
      "yarn lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "dependencies": {
    "shx": "^0.3.3"
  }
}
