{
  "name": "@aviato/ui-workspaces",
  "author": "Based",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atelier-saulx/aviato-ui/issues"
  },
  "homepage": "https://github.com/atelier-saulx/aviato-ui#readme",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atelier-saulx/aviato-ui.git"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "aviato",
    "saulx"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "run-s lint:*",
    "lint:theme": "yarn workspace @aviato/theme lint",
    "lint:ui": "yarn workspace @aviato/ui lint",
    "lint:docs": "yarn workspace @aviato/docs type-check",
    "start": "yarn watch",
    "watch": "run-p watch:*",
    "watch:theme": "yarn workspace @aviato/theme watch",
    "watch:ui": "yarn workspace @aviato/ui watch",
    "watch:docs": "yarn workspace @aviato/docs dev",
    "build": "run-s build:*",
    "build:theme": "yarn workspace @aviato/theme build",
    "build:ui": "yarn workspace @aviato/ui build",
    "build:docs": "yarn workspace @aviato/docs build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
