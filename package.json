{
  "name": "@aviato/ui-workspaces",
  "author": "Based",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/atelier-saulx/aviato-ui/issues"
  },
  "homepage": "https://github.com/atelier-saulx/aviato-ui#readme",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atelier-saulx/aviato-ui.git"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "aviato",
    "saulx"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "[ -d '.husky' ] && (husky install && shx rm -rf .git/hooks && shx ln -s ../.husky .git/hooks) || true",
    "watch": "turbo run watch --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "dependencies": {
    "shx": "^0.3.3",
    "turbo": "latest"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2"
  },
  "lint-staged": {
    "*": [
      "yarn lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "outputs": [
          "dist/**"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "lint": {
        "outputs": []
      },
      "watch": {
        "cache": false
      },
      "clean": {
        "cache": false
      }
    }
  }
}
