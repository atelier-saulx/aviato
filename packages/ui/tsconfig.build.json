{
  "extends": "@aviato/tsconfig/src/react-library.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./lib",
    "./esm",
    "./cjs",
    "**/*.story.tsx",
    "**/*.test.tsx",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist/types.d",
    "declarationDir": "dist/types.d",
    "composite": true,
  }
}