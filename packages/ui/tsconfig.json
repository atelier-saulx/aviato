{
  "compilerOptions": {
    "jsx": "react",
    "incremental": true,
    "composite": true,
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "tsBuildInfoFile": "./temp/buildcache",
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
}